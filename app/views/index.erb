<div class="all_container">

  <ul><% @posts.each do |post| %>
    <li>
      <div class="first_line_all_posts"><span class="title"><a href="<%=post.url%>"><%= post.title %></a></span> | <span id="user"><a href="/user_profile/<%= post.user_id.to_i %>"><%=post.author.username %></a> </span></div>
     <div class="second_line_all_posts">
     <form action="/post/vote" method="post">
      <input type="hidden" name="vote" value="1">
      <input type="hidden" value="<%= post.id%>" name="post_id">
      <span class="upvote"><%= post.post_votes.sum('vote')%> votes
      <input class="post_btn" type="submit" value="Up"></span>
      <span class="text" id="comment_count"><a href="/comments/<%=post.id%>"><%=post.comments.count%> comments</span>
    </form>        
    
  </div>
    </li>
    <% end %>
  </ul>

</div>

